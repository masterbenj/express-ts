{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": [
      "./*.js",
      "src/**/*",
      "test/**/*/ts"
    ],
    "exclude": ["node_modules"]
  }